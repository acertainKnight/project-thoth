#     environment:
#       POSTGRES_DB: letta_db
#       POSTGRES_USER: letta_user
#       POSTGRES_PASSWORD: secure_password
#     volumes:
#       - letta_pg_data:/var/lib/postgresql/data
#     ports:
#       - "5432:5432"
#
#   letta:
#     image: letta/letta:latest
#     depends_on:
#       - postgres
#     environment:
#       OPENAI_API_KEY: ${OPENAI_API_KEY}
#       LETTA_PG_URI: postgresql://letta_user:secure_password@postgres/letta_db
#       LETTA_SERVER_PASS: ${LETTA_SERVER_PASS}
#       SECURE: "true"
#     ports:
#       - "8283:8283"
#     volumes:
#       - ./letta_data:/root/.letta
