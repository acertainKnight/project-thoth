# =============================================================================
# Letta Memory System Configuration for MCP Integration
# =============================================================================

# IMPORTANT: Letta integrates with your existing MCP system through memory tools
# Your agent_v2 system will access Letta memory via MCP tools like:
# - core_memory_append, core_memory_replace
# - archival_memory_insert, archival_memory_search
# - conversation_search, memory_stats

# Letta Server Configuration
LETTA_SERVER_URL=http://localhost:8283
LETTA_API_KEY=  # Optional - leave empty for local development

# Agent Configuration
LETTA_AGENT_NAME=thoth_research_agent

# Memory Limits (in characters)
LETTA_CORE_MEMORY_LIMIT=10000

# Memory Features
LETTA_ARCHIVAL_MEMORY_ENABLED=true
LETTA_RECALL_MEMORY_ENABLED=true

# Performance Settings
LETTA_ENABLE_SMART_TRUNCATION=true
LETTA_CONSOLIDATION_INTERVAL_HOURS=24

# Fallback Behavior
LETTA_FALLBACK_ENABLED=true

# =============================================================================
