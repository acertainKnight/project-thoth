# ==============================================================================
# Thoth AI Research Assistant - Development Dockerfile
# Following UV official best practices for Docker
# See: https://docs.astral.sh/uv/guides/integration/docker/
#
# Development strategy:
#   1. Install ONLY dependencies (--no-install-project)
#   2. Mount source code at runtime via docker-compose volumes
#   3. Set PYTHONPATH=/app/src so Python finds mounted source
#   4. Use docker compose watch for automatic file syncing
# ==============================================================================

# ==============================================================================
# Builder stage - Install dependencies only (not the project)
# ==============================================================================
FROM ghcr.io/astral-sh/uv:python3.11-bookworm-slim AS builder

# UV best practices for Docker builds
ENV UV_COMPILE_BYTECODE=1 \
    UV_LINK_MODE=copy

WORKDIR /app

# Install ONLY dependencies (not the project itself)
# This layer is cached unless pyproject.toml or uv.lock changes
# --no-install-project: Skip installing the project, only install deps
# This enables hot-reload by mounting source at runtime
RUN --mount=type=cache,target=/root/.cache/uv \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --frozen --no-install-project --no-dev

# Copy source code (will be overwritten by volume mount in dev)
ADD . /app

# ==============================================================================
# Runtime stage - Development image with hot-reload support
# ==============================================================================
FROM python:3.11-slim AS runtime

# Install runtime system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    ca-certificates \
    libpq5 \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy the virtual environment from builder (deps only, no project)
COPY --from=builder --chown=root:root /app/.venv /app/.venv

# Copy source code (will be overwritten by volume mount in dev)
COPY --chown=root:root src /app/src
COPY --chown=root:root pyproject.toml /app/

# Create workspace directories
RUN mkdir -p /app/cache /app/logs /app/migrations /app/data/output /app/exports \
    /workspace/pdfs /workspace/notes /workspace/data /workspace/queries \
    /workspace/discovery /workspace/knowledge /workspace/logs /workspace/cache

WORKDIR /app

# UV best practice: Set PATH to include venv, PYTHONPATH to find source
# PYTHONPATH=/app/src allows hot-reload when source is mounted
ENV PATH="/app/.venv/bin:$PATH" \
    PYTHONPATH="/app/src" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    THOTH_DOCKER=1 \
    THOTH_LOG_LEVEL=DEBUG \
    THOTH_DEV_MODE=1

# Expose ports
EXPOSE 8000 8001 5678

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application - Python finds source via PYTHONPATH
CMD ["python", "-m", "thoth.cli.server", "start"]
