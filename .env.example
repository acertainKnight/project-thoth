# Thoth AI Research Agent Configuration

# Base Configuration
WORKSPACE_DIR=/path/to/workspace
PDF_DIR=${WORKSPACE_DIR}/data/pdfs
MARKDOWN_DIR=${WORKSPACE_DIR}/data/markdown
NOTES_DIR=${WORKSPACE_DIR}/data/notes
TEMPLATES_DIR=${WORKSPACE_DIR}/templates

# Logging
LOG_LEVEL=INFO
LOG_FILE=${WORKSPACE_DIR}/logs/thoth.log

# File Monitoring
WATCH_INTERVAL=5
BULK_PROCESS_CHUNK_SIZE=10

# API Keys
API_MISTRAL=your_mistral_key
API_OPENROUTER=your_openrouter_key

# LLM Settings
LLM_MODEL=google/gemini-2.0-flash-001
LLM_TEMPERATURE=0.1
USE_LLM_FOR_CITATIONS=true

# Citation settings
CITATION_FORMAT=uri

# URI Settings
URI_SCHEME=thoth

# Download Settings
DOWNLOAD_TIMEOUT=60
