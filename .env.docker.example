# ==============================================================================
# Thoth AI Research Assistant - Docker Environment Configuration
# Copy this file to .env.docker and configure your settings
# ==============================================================================

# ==============================================================================
# API KEYS - Configure your external service API keys
# ==============================================================================

# LLM Provider API Keys
API_MISTRAL_KEY=your_mistral_api_key_here
API_OPENROUTER_KEY=your_openrouter_api_key_here

# Academic Search API Keys
API_OPENCITATIONS_KEY=your_opencitations_api_key_here
API_GOOGLE_KEY=your_google_api_key_here
API_SEMANTIC_SCHOLAR_KEY=your_semantic_scholar_api_key_here

# Web Search API Key
API_WEB_SEARCH_KEY=your_web_search_api_key_here

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# API Server Settings
THOTH_API_HOST=0.0.0.0
THOTH_API_PORT=8000

# MCP Server Settings
THOTH_MCP_HOST=0.0.0.0
THOTH_MCP_PORT=8001

# ChromaDB Settings
THOTH_CHROMADB_HOST=chromadb
THOTH_CHROMADB_PORT=8003
THOTH_CHROMADB_URL=http://chromadb:8003

# ==============================================================================
# DIRECTORY CONFIGURATION
# ==============================================================================

# Main workspace directory
THOTH_WORKSPACE_DIR=/workspace

# Specific directories (relative to workspace)
THOTH_PDF_DIR=/workspace/pdfs
THOTH_NOTES_DIR=/workspace/notes
THOTH_DATA_DIR=/workspace/data
THOTH_QUERIES_DIR=/workspace/queries
THOTH_DISCOVERY_SOURCES_DIR=/workspace/discovery
THOTH_KNOWLEDGE_BASE_DIR=/workspace/knowledge
THOTH_LOGS_DIR=/workspace/logs
THOTH_CACHE_DIR=/workspace/cache

# ==============================================================================
# OPERATIONAL SETTINGS
# ==============================================================================

# Logging
THOTH_LOG_LEVEL=INFO
THOTH_LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>

# Docker-specific settings
THOTH_DOCKER=1
THOTH_PRODUCTION=0

# Python settings
PYTHONPATH=/app/src
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ==============================================================================
# LLM MODEL CONFIGURATION
# ==============================================================================

# Primary LLM model
THOTH_LLM_MODEL=anthropic/claude-3-sonnet
THOTH_LLM_TEMPERATURE=0.7
THOTH_LLM_MAX_OUTPUT_TOKENS=4096

# Research agent model
THOTH_RESEARCH_AGENT_LLM_MODEL=anthropic/claude-3-sonnet
THOTH_RESEARCH_AGENT_MEMORY_ENABLED=true

# ==============================================================================
# AGENT CONFIGURATION
# ==============================================================================

# Agent behavior settings
THOTH_AGENT_MAX_TOOL_CALLS=20
THOTH_AGENT_TIMEOUT_SECONDS=300
THOTH_AGENT_MEMORY_ENABLED=true

# MCP Tools settings
THOTH_MCP_TOOLS_ENABLED=true
THOTH_MCP_TOOLS_TIMEOUT=30

# ==============================================================================
# DISCOVERY SYSTEM CONFIGURATION
# ==============================================================================

# Discovery settings
THOTH_DISCOVERY_AUTO_START_SCHEDULER=false
THOTH_DISCOVERY_DEFAULT_MAX_ARTICLES=50
THOTH_DISCOVERY_DEFAULT_INTERVAL_MINUTES=60
THOTH_DISCOVERY_RATE_LIMIT_DELAY=1.0

# Source-specific settings
THOTH_ARXIV_MAX_RESULTS=100
THOTH_SEMANTIC_SCHOLAR_MAX_RESULTS=50
THOTH_GOOGLE_SCHOLAR_MAX_RESULTS=50

# ==============================================================================
# RAG SYSTEM CONFIGURATION
# ==============================================================================

# Vector database settings
THOTH_RAG_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
THOTH_RAG_CHUNK_SIZE=512
THOTH_RAG_CHUNK_OVERLAP=50
THOTH_RAG_COLLECTION_NAME=thoth_papers

# Search settings
THOTH_RAG_DEFAULT_K=10
THOTH_RAG_MIN_SIMILARITY=0.1

# ==============================================================================
# PERFORMANCE AND CACHING
# ==============================================================================

# Cache settings
THOTH_ENABLE_CACHE=true
THOTH_CACHE_TTL=3600
THOTH_CACHE_MAX_SIZE=1000

# Performance settings
THOTH_MAX_CONCURRENT_REQUESTS=10
THOTH_MAX_MEMORY=2GB
THOTH_CHUNK_SIZE=1024

# Processing settings
THOTH_PDF_PROCESSING_TIMEOUT=300
THOTH_MAX_PDF_SIZE_MB=50
THOTH_ENABLE_OCR=true

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# CORS settings (for API server)
THOTH_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
THOTH_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
THOTH_CORS_ALLOWED_HEADERS=*

# Rate limiting
THOTH_RATE_LIMIT_ENABLED=true
THOTH_RATE_LIMIT_PER_MINUTE=60

# Authentication (if enabled)
THOTH_AUTH_ENABLED=false
THOTH_JWT_SECRET_KEY=your_jwt_secret_key_here
THOTH_JWT_EXPIRE_MINUTES=60

# ==============================================================================
# MONITORING AND DEBUGGING
# ==============================================================================

# Health check settings
THOTH_HEALTH_CHECK_ENABLED=true
THOTH_HEALTH_CHECK_INTERVAL=30

# Metrics collection
THOTH_METRICS_ENABLED=true
THOTH_METRICS_PORT=8002

# Debug settings (development only)
THOTH_DEBUG_ENABLED=false
THOTH_DEBUG_PORT=5678

# ==============================================================================
# OBSIDIAN INTEGRATION
# ==============================================================================

# Plugin settings
THOTH_OBSIDIAN_INTEGRATION_ENABLED=true
THOTH_OBSIDIAN_VAULT_PATH=/workspace/notes
THOTH_OBSIDIAN_TEMPLATES_PATH=/workspace/templates

# WebSocket settings
THOTH_WEBSOCKET_ENABLED=true
THOTH_WEBSOCKET_MAX_CONNECTIONS=50

# ==============================================================================
# BACKUP AND RECOVERY
# ==============================================================================

# Backup settings
THOTH_BACKUP_ENABLED=false
THOTH_BACKUP_INTERVAL_HOURS=24
THOTH_BACKUP_RETENTION_DAYS=30
THOTH_BACKUP_DIRECTORY=/workspace/backups

# ==============================================================================
# DEVELOPMENT SETTINGS (Override in .env.dev)
# ==============================================================================

# Development mode
THOTH_DEV_MODE=0
THOTH_ENABLE_HOT_RELOAD=0

# Testing
THOTH_TEST_MODE=0
THOTH_TEST_DATA_DIR=/workspace/test-data
